  flex: 1;
  min-width: 200px;
}

.form-row label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

.form-row input[type="text"] {
  width: 100%;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.form-actions {
  display: flex;
  gap: 10px;
}

.form-actions input[type="submit"],
.form-actions a {
  padding: 10px 20px;
  border-radius: 4px;
  text-decoration: none;
  display: inline-block;
}

.form-actions input[type="submit"] {
  background: #007bff;
  color: white;
  border: none;
  cursor: pointer;
}

.form-actions a {
  background: #6c757d;
  color: white;
}

.results-summary {
  margin-bottom: 20px;
  padding: 10px;
  background: #e9ecef;
  border-radius: 4px;
}

.production-card {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 20px;
  background: white;
}

.production-card h2 {
  margin-top: 0;
  margin-bottom: 10px;
}

.production-card h2 a {
  color: #333;
  text-decoration: none;
}

.production-card h2 a:hover {
  color: #007bff;
}

.production-details {
  margin-bottom: 10px;
}

.badge {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  margin-right: 8px;
  margin-bottom: 4px;
}

.badge.type { background: #007bff; color: white; }
