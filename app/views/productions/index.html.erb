<div class="container">
  <h1>Production CRM</h1>
  
  <!-- Search Form -->
  <%= form_with url: productions_path, method: :get, local: true do |form| %>
    <div class="search-form">
      <div class="form-row">
        <%= form.label :title, "Title" %>
        <%= form.text_field :title, value: params[:title], placeholder: "Search by title..." %>
        
        <%= form.label :status, "Status" %>
        <%= form.text_field :status, value: params[:status], placeholder: "e.g. Active Development" %>
        
        <%= form.label :location, "Location" %>
        <%= form.text_field :location, value: params[:location], placeholder: "e.g. Los Angeles" %>
      </div>
      
      <div class="form-row">
        <%= form.label :company, "Company" %>
        <%= form.text_field :company, value: params[:company], placeholder: "Company name..." %>
        
        <%= form.label :person, "Person" %>
        <%= form.text_field :person, value: params[:person], placeholder: "Person name..." %>
        
        <%= form.label :role, "Role" %>
        <%= form.text_field :role, value: params[:role], placeholder: "e.g. Director" %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Search" %>
        <%= link_to "Clear", productions_path %>
        <% 
          export_params = {}
          [:title, :status, :location, :company, :person, :role].each do |param|
            export_params[param] = params[param] if params[param].present?
          end
          export_params[:format] = :csv
        %>
        <%= link_to "Export CSV", productions_path(export_params) %>
      </div>
    </div>
  <% end %>
  
  <!-- Results Summary -->
  <div class="results-summary">
    <p>Found <%= @productions.count %> productions</p>
  </div>

  <!-- Productions List -->
  <div class="productions-list">
    <% @productions.each do |production| %>
      <div class="production-card">
        <h2><%= link_to production.title, production_path(production) %></h2>
        
        <div class="production-details">
          <% if production.production_type.present? %>
            <span class="badge type"><%= production.production_type %></span>
          <% end %>
          
          <% if production.network.present? %>
            <span class="badge network"><%= production.network %></span>
          <% end %>
          
          <% if production.status.present? %>
            <span class="badge status"><%= production.status %></span>
          <% end %>
          
          <% if production.location.present? %>
            <span class="badge location"><%= production.location %></span>
          <% end %>

          <% if production.edition_number.present? %>
            <span class="badge edition">#<%= production.edition_number %></span>
          <% end %>
        </div>
        
        <div class="production-meta">
          <span><%= production.companies.count %> companies</span>
          <span><%= production.people.count %> people</span>
          <span><%= production.all_emails.count %> emails</span>
        </div>
        
        <% if production.description.present? %>
          <p class="description"><%= truncate(production.description, length: 150) %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <% if @productions.empty? %>
    <div class="no-results">
      <p>No productions found.</p>
      <% if params.values.none?(&:present?) %>
        <p>Try importing some data first:</p>
        <code>bundle exec rake import:simple_productions</code>
      <% end %>
    </div>
  <% end %>
</div>

<style>
